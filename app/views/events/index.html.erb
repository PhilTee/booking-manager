<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <th><%= event.name %></th>
        <td>
          <div class="btn-group" role="group" aria-label="Action Buttons">
            <%= link_to 'Show', event, :class => 'btn btn-sm btn-primary' %>
            <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-sm btn-success'  %>
            <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-sm btn-danger'  %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

